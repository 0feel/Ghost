{
    "blog": {
        "title": {
            "default": "Ghost"
        },
        "description": {
            "default": "Just a blogging platform."
        },
        "logo": {
            "default": ""
        },
        "cover": {
            "default": ""
        },
        "defaultLang": {
            "default": "en",
            "validations": {
                "notNull": true
            }
        },
        "postsPerPage": {
            "default": "6",
            "validations": {
                "notNull": true,
                "isNumeric": true
            }
        },
        "forceI18n": {
            "default": "true",
            "validations": {
                "notNull": true,
                "isIn": ["true", "false"]
            }
        }
    },
    "general": {
        "email": {
            "default": "ghost@example.com",
            "validations": {
                "notNull": true,
                "isEmail": true
            }
        },
        "activePlugins": {
            "default": ""
        },
        "activeTheme": {
            "default": "casper"
        }
    },
    "core": {
        "currentVersion": {
            "default": "000"
        },
        "installedPlugins": {
            "default": "[]"
        }
    }
}
